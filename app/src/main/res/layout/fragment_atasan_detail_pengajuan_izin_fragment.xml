<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_14sdp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AtasanFragment.AtasanDetailPengajuanIzinKaryawanFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_22ssp"
                android:textColor="@color/black"
                android:text="Detail Pengajuan\nIzin Karyawan" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvStatus"
                android:layout_width="wrap_content"
                android:padding="@dimen/_10sdp"
                app:contentPadding="@dimen/_5sdp"
                app:cardBackgroundColor="@color/yellow"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popmed"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/black"
                    android:text="Data Cuti" />

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/popsem"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/black"
                android:text="Data Izin" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:text="NIP" />

            <EditText
                android:id="@+id/etNip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/container_edittext"
                android:padding="@dimen/_10sdp"
                android:enabled="false"
                android:textColor="@color/black2"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/popmed"
                android:layout_marginTop="@dimen/_5sdp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:text="Nama" />

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/container_edittext"
                android:padding="@dimen/_10sdp"
                android:enabled="false"
                android:textColor="@color/black2"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/popmed"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:text="Tanggal Izin" />

            <EditText
                android:id="@+id/etTglIzin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/container_edittext"
                android:padding="@dimen/_10sdp"
                android:enabled="false"
                android:textColor="@color/black2"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/popmed"
                android:layout_marginTop="@dimen/_5sdp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:text="Waktu Izin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etJamMulai"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/container_edittext"
                    android:padding="@dimen/_10sdp"
                    android:enabled="false"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/popmed"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/popmed"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/black"
                    android:text="S/d" />

                <EditText
                    android:id="@+id/etJamSelesai"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/container_edittext"
                    android:padding="@dimen/_10sdp"
                    android:enabled="false"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/popmed"
                    android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:text="Jenis Izin" />

            <EditText
                android:id="@+id/etJenisIzin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/container_edittext"
                android:padding="@dimen/_10sdp"
                android:enabled="false"
                android:textColor="@color/black2"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/popmed"
                android:layout_marginTop="@dimen/_5sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/popmed"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/black"
                android:text="Keperluan" />

            <EditText
                android:id="@+id/etKeperluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/container_edittext"
                android:padding="@dimen/_10sdp"
                android:enabled="false"
                android:lines="4"
                android:gravity="start"
                android:textColor="@color/black2"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/popmed"
                android:layout_marginTop="@dimen/_5sdp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetuju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setuju"
                app:icon="@drawable/baseline_check_circle_24"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_20sdp"
                app:backgroundTint="@color/green"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTolak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tolak"
                app:icon="@drawable/ic_error_outline_white_24dp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                app:backgroundTint="@color/red"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKembali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kembali"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                app:backgroundTint="@color/light_gray4"/>




        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>