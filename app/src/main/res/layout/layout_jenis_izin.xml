<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="Jenis Izin"
                android:fontFamily="@font/popsem"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIzinKeluarKantor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/baseline_home_work_24"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Izin Keluar Kantor"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIzinKeluarCepat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:backgroundTint="@color/yellow"
                app:icon="@drawable/baseline_access_time_filled_24"
                android:text="Izin Keluar Cepat"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

</RelativeLayout>